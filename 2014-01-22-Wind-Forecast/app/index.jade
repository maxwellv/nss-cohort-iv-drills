doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Wind Forecast
    link(rel='stylesheet' href='/css/normalize.css')
    link(rel='stylesheet' href='/css/style.css')
    script(src='/js/vendor/jquery.js')
    script(src='/js/source/main.js')
  body
    h1 Wind Forecast
    input#zip(type='text' placeholder='ZIP Code')
    input#get-wind(type='button' value='Get wind')
    h2#wind Wind information for:
    h3
      #desc Description:
      #dir Direction:
      #deg Direction (in degrees):
      #speed Wind speed (in MPH):
      #gust Maximum gusts (in MPH):

    select
      option(value='pick') Pick One
      option(value='A') A
      option(value='B') B
      option(value='C') C
